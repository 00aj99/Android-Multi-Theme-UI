<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pkj.wow.multitheme.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_32dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                style="@style/Text.Small"
                android:text="Theme : "
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:onClick="onClickTheme"/>

            <ImageButton
                android:id="@+id/theme_blue"
                android:layout_marginRight="8dp"
                android:layout_width="@dimen/size_32dp"
                android:layout_height="@dimen/size_32dp"
                android:background="@color/colorPrimary"
                android:onClick="onClickTheme"/>

            <ImageButton
                android:id="@+id/theme_gray"
                android:layout_marginRight="8dp"
                android:layout_width="@dimen/size_32dp"
                android:layout_height="@dimen/size_32dp"
                android:background="@color/colorPrimary_Gray"
                android:onClick="onClickTheme"/>

            <ImageButton
                android:id="@+id/theme_lime"
                android:layout_marginRight="8dp"
                android:layout_width="@dimen/size_32dp"
                android:layout_height="@dimen/size_32dp"
                android:background="@color/colorPrimaryLime"
                android:onClick="onClickTheme"/>

        </LinearLayout>

        <include layout="@layout/layout_login"/>

        <include layout="@layout/layout_refresh_list"/>

        <Button
            style="@style/Buton.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginBottom="8dp"
            android:text="Button Borderless"/>

        <Button
            style="@style/Buton.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginBottom="8dp"
            android:text="Button Borderless Colored"/>

        <Button
            style="@style/Buton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginBottom="8dp"
            android:text="Button"/>

        <Button
            style="@style/Buton.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginBottom="8dp"
            android:text="Button Colored"/>

        <TextView
            style="@style/Text.Caption"
            android:text="Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            style="@style/Text.Small"
            android:text="Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            style="@style/Text.Body1"
            android:text="Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            style="@style/Text.Body2"
            android:text="Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            style="@style/Text.Subhead"
            android:text="Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            style="@style/Text.Button"
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            style="@style/Text.Medium"
            android:text="Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            style="@style/Text.Title"
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            style="@style/Text.Large"
            android:text="Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            style="@style/Text.Headline"
            android:text="Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            style="@style/Text.Display1"
            android:text="Display1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/large_text" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
